<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:background="@drawable/frame_purple_border">

        <TextView
            android:id="@+id/txtAutorComment3"
            android:layout_width="126dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="left"
            android:text="FechaConexion"
            android:textAlignment="gravity"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtFechaConexion"
            android:layout_width="179dp"
            android:layout_height="25dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:gravity="start"
            android:text="FechaConexion"
            android:textAlignment="gravity"
            app:layout_constraintBottom_toBottomOf="@+id/txtAutorComment3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtAutorComment3"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txtalias"
            android:layout_width="179dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:gravity="left"
            android:text="Alias"
            android:textAlignment="gravity"
            app:layout_constraintBottom_toBottomOf="@+id/txtAutorComment4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtAutorComment4"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txtAutorComment4"
            android:layout_width="126dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="8dp"
            android:gravity="left"
            android:text="Alias"
            android:textAlignment="gravity"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtAutorComment3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>